<div id="posts_show_wrapper" class="skinny_wrapper">
    <div class="post_informatique">
        <p class="date"><%= @post.created_at.strftime("%A, %B %d") %></p>
        <img src="https://unsplash.it/600/250?image=1024" alt="image_blog">
        <h1><%= @post.title %></h1>
        <hr>
    </div>

<div class="skinny_wrapper">

    <div id="content">
        <%= @post.content %>
    </div>
    <div id="share_box">
        <p>Partager : <%= @post.title %></p>
        <a onclick="javascript:windows.open('http://twitter.com/share?text<%= @post.title %>  par @TonyBoucheau - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
          <i class="fa fa-twitter"></i>
        </a>
        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="#"><i class="fa fa-google-plus"></i></a>
        <hr>
    </div>
</div>


<%= @post.title %> <br>
<%= @post.content %>
<br>
<%= link_to "Editer", edit_post_path(@post) %>
<%= link_to "Supprimer", post_path(@post), method: :delete, data: { confirm: "Es-tu sur ?"} %>
