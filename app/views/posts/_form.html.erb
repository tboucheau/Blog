<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "erreur") %> ont empêché le post d'être sauvegardé :</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title, "Titre" %><br>
  <%= f.text_field :title %>

  <br>
  <br>

  <%= f.label :content, "Contenu" %><br>
  <%= f.text_area :content %>
  <br>
  <br>

  <%= f.submit "Sauvegarder" %>
  <br>
  <br>
<% end %>
