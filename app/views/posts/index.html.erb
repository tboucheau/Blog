<div id="page_title">
  <h1 class="title_header_center">Mes articles</h1>
</div>

<div id="posts_wrapper">
  <% @posts.each do |post| %>
    <div class="post">
      <p class="date"><%= post.created_at.strftime("%e %b %Y %H:%M:%S") %></p>
      <h2><%= link_to post.title.truncate(25), post %></h2>
      <div class="resume"><%= post.content.truncate(25) %></div>
      <hr>
    </div>
  <% end %>
</div>

<%= will_paginate @post %>
